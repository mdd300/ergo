<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_clientes"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_weight="4"
    android:gravity="center_vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/complet_image"
        android:layout_toRightOf="@+id/complet_image"
        android:text="name"
        android:textColor="@color/CorBotaoEnviar"
        android:textSize="13dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/txtPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PreÃ§o"
        android:textColor="@color/CinzaEscuro"
        android:textSize="11dip"
        android:typeface="sans"
        android:layout_below="@+id/ult_mes"
        android:layout_alignLeft="@+id/ult_mes"
        android:layout_alignStart="@+id/ult_mes" />

    <TextView
        android:id="@+id/ult_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Text"
        android:textColor="@color/CinzaEscuro"
        android:textSize="11dip"
        android:layout_below="@+id/txtRef"
        android:layout_alignLeft="@+id/txtRef"
        android:layout_alignStart="@+id/txtRef" />


    <TextView
        android:id="@+id/txtRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nome"
        android:layout_alignStart="@+id/nome"
        android:layout_below="@+id/nome"
        android:layout_marginTop="12dp"
        android:paddingLeft="5dp"
        android:text="Ref"
        android:textColor="@color/CinzaEscuro"
        android:textSize="11dip" />

    <ImageView
        android:id="@+id/complet_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/searchicon" />

</RelativeLayout>