<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.uniquesys.qrgo.ProdutoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="1000dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView13"
            android:layout_marginTop="130dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/btbg" />

        <ImageView
            android:id="@+id/ImgProd"
            android:layout_width="400dp"
            android:layout_height="280dp"
            android:layout_above="@+id/btnPedido"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:background="@color/Cinza"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/imgroupa" />

        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnPedido"
            android:layout_alignBottom="@+id/btnPedido"
            android:layout_toLeftOf="@+id/button3"
            android:layout_toStartOf="@+id/button3"
            android:text="Guardar"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnPedido"
            android:layout_alignBottom="@+id/btnPedido"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2"
            android:text="Limpar"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView8"
            android:text="TextView"
            android:textColor="@color/CorBotaoEnviar"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="31dp"
            app:srcCompat="@drawable/qrcodeicon"
            android:layout_alignBottom="@+id/txtProd"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/btnVerde"
            android:elevation="21dp"
            android:text="Finalizar Pedido"
            android:textColor="@android:color/background_light"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView12"
            android:layout_toEndOf="@+id/imageView12" />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnPedido"
            android:layout_alignBottom="@+id/btnPedido"
            android:layout_toLeftOf="@+id/btnPedido"
            android:layout_toStartOf="@+id/btnPedido"
            android:text="Ver"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/btbg"
            android:layout_above="@+id/imageView10" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView12"
            android:layout_toStartOf="@+id/imageView12"
            app:srcCompat="@drawable/shape" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/imageView15"
            android:layout_toStartOf="@+id/imageView15"
            app:srcCompat="@drawable/iconmessage" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/imageView13"
            android:layout_alignEnd="@+id/btnPedido"
            android:layout_alignRight="@+id/btnPedido"
            android:layout_alignTop="@+id/imageView14"
            app:srcCompat="@drawable/iconnotification" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
