<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.uniquesys.qrgo.ProdutoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/Cinza"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="4dp">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_toLeftOf="@+id/imageButton4"
                android:layout_toStartOf="@+id/imageButton4"
                android:background="@color/Cinza"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/iconnotification" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageButton5"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:background="@color/Cinza"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/iconmessage"
                tools:layout_editor_absoluteX="335dp"
                tools:layout_editor_absoluteY="4dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/Cinza"
                android:onClick="grid"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/logo" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/btbg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView8"
            android:text="TextView"
            android:textColor="@color/CorBotaoEnviar"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@drawable/qrcodeicon"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtProd"
            android:text="PreÃ§o:"
            android:textColor="@color/viewfinder_mask"
            android:textColorHighlight="@color/Cinza"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtPreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProd"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="TextView"
            android:textColor="@color/viewfinder_mask" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referencia:"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:layout_above="@+id/relativeLayout3"
            android:layout_toLeftOf="@+id/txtReferencia"
            android:layout_toStartOf="@+id/txtReferencia" />

        <TextView
            android:id="@+id/txtReferencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_above="@+id/relativeLayout3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout3">

            <ImageView
                android:id="@+id/ImgProd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="69dp"
                android:background="@color/Cinza"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/imgroupa" />

            <Button
                android:id="@+id/btnPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="13dp"
                android:backgroundTint="@color/btnVerde"
                android:elevation="21dp"
                android:text="Finalizar Pedido"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Ver"
                android:textSize="10sp"
                android:layout_alignBaseline="@+id/btnPedido"
                android:layout_alignBottom="@+id/btnPedido"
                android:layout_toLeftOf="@+id/btnPedido"
                android:layout_toStartOf="@+id/btnPedido" />

            <Button
                android:id="@+id/button3"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Limpar"
                android:textSize="10sp"
                android:layout_alignTop="@+id/btnPedido"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2" />

            <Button
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Guardar"
                android:textSize="10sp"
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignBottom="@+id/button2"
                android:layout_toLeftOf="@+id/button3"
                android:layout_toStartOf="@+id/button3" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
