<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.uniquesys.qrgo.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/spinner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:text="Usuário"
            android:textColor="@color/CorBotaoEnviar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:background="@color/Cinza">

    </RelativeLayout>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="392dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/CorBotaoEnviar"
        android:backgroundTint="@color/CorBotaoEnviar"
        android:onClick="login"
        android:text="Entrar"
        android:textColor="@android:color/background_light"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="530dp" />

    <TextView
        android:id="@+id/esqSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignEnd="@+id/txtSenha"
        android:layout_alignRight="@+id/txtSenha"
        android:layout_marginBottom="29dp"
        android:text="Esqueceu a senha?"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="456dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEnviar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Não te conta? Cadastre-se"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="496dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="233dp"
        android:layout_height="66dp"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="107dp"
        android:layout_height="88dp"
        android:layout_above="@+id/spinner2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        app:srcCompat="@drawable/ellipse"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="150dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="192dp"
        android:layout_height="25dp"
        android:layout_marginBottom="15dp"
        android:entries="@array/status"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="249dp"
        android:layout_above="@+id/imageView"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="14dp"
        android:background="@color/Cinza"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/qrcodeicon"
        tools:background="@color/Cinza"
        tools:layout_editor_absoluteX="358dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shape"
        android:layout_above="@+id/txtUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:layout_above="@+id/txtSenha"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/esqSenha"
        android:layout_alignEnd="@+id/txtUser"
        android:layout_alignRight="@+id/txtUser"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword" />


</RelativeLayout>
